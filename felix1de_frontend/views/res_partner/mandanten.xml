<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data> 
        <record model="ir.ui.view" id="view_mandanten_form"> 
            <field name="name">partner.mandanten</field> 
            <field name="model">res.partner</field> 
            <field name="inherit_id" ref="base.view_partner_form"/>           
            <field name="arch" type="xml"> 
            
            <xpath expr="//field[@name='website']" position="after">
                <field name="website"/>
                <field name="function" attrs="{'invisible': [('is_company', '=', False)]}"/><!-- options='{"no_open": True}'-->
            </xpath>
            </field> 
        </record>
        
        <!-- change is_company to is_mandant -->
      <!-- auto create entry in backend.mandanten -->
        
        <!--Action-->
    <record model="ir.actions.act_window" id="liste_mandanten_menu_action"> 
            <field name="name">Mandanten</field> 
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field> 
            <field name="view_type">form</field> 
            <field name="view_mode">tree,form</field> 
            <!--field name="domain">[('mitarbeiter_id.user_id', '=',uid)]</field-->
            <field name="help" type="html"> 
                <p class="oe_view_nocontent_create">Der Erste Eintrag hier
                </p> 
            </field> 
    </record> 
    
    <!--Menus-->    
        <menuitem id="main_mandanten_menu" name="Mandanten"/> 
        <menuitem id="main_mandanten_submenu" name="Liste Mandanten" parent="main_mandanten_menu"/> 
        <menuitem id="liste_mandanten_menu" name="Mandanten" parent="main_mandanten_submenu" action="liste_mandanten_menu_action"/> 
            
    
            
    </data>
</openerp>

