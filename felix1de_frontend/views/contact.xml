<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="contact_tree_view" model="ir.ui.view">
            <field name="name">Contact</field>
            <field name="model">backend.kontakte</field>
            <field name="arch" type="xml">
                <tree string="Contact">   
                  <field name="vorname"/>
                  <field name="telefon1"/>
                  <field name="email1"/>
                 <field name="contact_since"/>
                </tree>
            </field>
        </record>
        <record id="contact_form_view" model="ir.ui.view">
            <field name="name">Contract</field>
            <field name="model">backend.kontakte</field>
            <field name="arch" type="xml">
                <form string="Contact">
                    
                   <sheet>
                        <field name="image" widget='image' class="oe_avatar" options='{"preview_image": "image_medium", "size": [90, 90]}'/>
                         <div class="oe_title">
                           <h1> <field name="vorname" default_focus="1" placeholder="First Name"/>
                            <field name="nachname" default_focus="1" placeholder="Last Name"/>
                        </h1>
                        </div>
                       
                       <group>
                          <group>
                              <field name="contact_id"/>
                              <field name="con_acquired_by"/>
                              <field name="contact_since"/>
                              <field name="telefon1"/>
                              <field name="telefon2"/>        
                          </group>
                          <group>
                              <field name="fax"/>
                              <field name="email1"/>
                               <field name="bemerkung"/>
                          </group>
                         </group>
                         
                        <notebook position="inside">
                        <page string="Addresse">
                            <group>
                                   <group>
                                       <label for="strasse" string="Addresse"/>
                                            <div class="o_address_format">
                                                
                                                    <field name="strasse" placeholder="Street..." class="o_address_street"/>
                                                <field name="hausnummer" placeholder="House No..." class="o_address_street"/>
                                                <!--field name="street2" placeholder="Street 2..." class="o_address_street"/-->
                                                    
                                                <field name="ort" placeholder="City" class="o_address_city"/>
                                                <!--field name="state" class="o_address_state" placeholder="State"/-->
                                                <field name="plz" placeholder="ZIP" class="o_address_zip"/>
                                                <!--field name="country_id" placeholder="Country" class="o_address_country"/-->

                                                
                                            </div>
                                   </group>
                                   <group>
                                   
                                   </group>
                                 </group>
                             </page>
                                <page string="Tickets">
                               <field name="ticket_id"/>
                          </page>
                          <page string="Client">
                               <field name="client_id"/>
                          </page>
                      
                          
                            </notebook>                       

                                         
                   </sheet>
                </form>
            </field>
        </record>
          <record id="action_contact_system" model="ir.actions.act_window">
            <field name="name">Contact</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">backend.kontakte</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
           
        </record>
            <menuitem id="menu_main" name="Contact" />
             <menuitem id="menu_contact" name="Contact" parent="menu_main"/>
            <menuitem id="sub_menu" name="Contact" parent="menu_contact" action="action_contact_system"/>
            
            
   

            
    </data>
</openerp>

