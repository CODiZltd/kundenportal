<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		 
		<record id="mandanten_tree_view" model="ir.ui.view">
		    <field name="name">mandant</field>
		    <field name="model">backend.mandanten</field>
		    <field name="arch" type="xml">
		        <tree string="mandant">  	
                          <field name="name" string="Mandant"/>                           	 
                           <field name="status"/>
			                 <field name="mandantennummer"/>
                             <field name="telefon1"/>
                            <field name="email1"/>
                            <field name="email2"/>
		            
		        </tree>
		    </field>
		</record>
		<record id="mandant_form_view" model="ir.ui.view">
		    <field name="name">mandant</field>
		    <field name="model">backend.mandanten</field>
		    <field name="arch" type="xml">
		       <form string="Mandant">
		          <sheet>   
					   <field name="image" widget='image' class="oe_avatar" options='{"preview_image": "image_medium", "size": [90, 90]}'/>
					     <div class="oe_title">
                           <h1>  <field name="name" placeholder="Mandant ..." required="1"/>
                            
                        </h1>
                        </div>                             				       
				            
                                   
					   <group>
					      <group>
						      <field name="status"/>
						      <field name="datenok"/>
		                                      <field name="mandantennummer"/>
                                                      <field name="telefon1"/>
                                                      <field name="telefon2"/>
                                                      <field name="email1"/>
                                                      <field name="email2"/>
                                                      <field name="strasse"/>
						    
					      </group>
					                                                   
					     <group>
						      <field name="hausnummer"/>
						      <field name="bic"/>
		                                      <field name="branche"/>
                                                      <field name="empfaenger1"/>
                                                      
						    
					      </group>
					   </group>
					   <notebook>
					     <page string="Address">
								 <group>
								   <group>
								       <label for="strasse" string="Address"/>
											<div class="o_address_format">
												
                                                    <field name="strasse" placeholder="Street..." class="o_address_street"/>
												<field name="hausnummer" placeholder="House No..." class="o_address_street"/>
												<field name="strasse" placeholder="Street 2..." class="o_address_street"/>
													
												<field name="land" placeholder="City" class="o_address_city"/>
												<field name="adresse" class="o_address_state" placeholder="addresse"/>
												

												
											</div>
								   </group>
								  
								   
								   </group>
								 
                             </page>
                             <page string="kontakte">
					        <group>
					            <group>
					              <field name="contact_id"/>
					           </group>
					            <group>
					        
					          </group>
					        </group> 
                                 
					     </page>
					     <page string="Bankdetails">
                                <field name="bank_rel"/>
                             </page>
                          <page string="Orders">
                                 <field name="order_id"/>
                            </page>
                             <page string="Numbers">
                                <field name="number_id"/>
                             </page>
                             <page string="Tickets">
								  <group>
									   <div >
										  <field name="ticketing_rel" nolable="1"/>
									   </div>
		                         </group>
						     </page>
						      <page string="Branche">
								  <group>
									   <div >
										  <field name="branch_id" nolable="1"/>
									   </div>
		                         </group>
						     </page>
						    
					   </notebook>
		           </sheet>
                              <div class="oe_chatter">
				    <field name="message_follower_ids" widget="mail_followers" />
				    <field name="message_ids" widget="mail_thread"/>
				</div>
		       </form>
		    </field>
		</record>
		  <record id="action_mandant_system" model="ir.actions.act_window">
		    <field name="name">mandant</field>
		    <field name="type">ir.actions.act_window</field>
		    <field name="res_model">backend.mandanten</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">tree,form</field>
		   
		</record>
		<menuitem id="client_root_menu1" name="Mandant" sequence="6"/>
		 <menuitem id="start_sub_menu11234" parent="client_root_menu1" name="List of mandant"/> 
         <menuitem id="mandant_menu_sub123" parent="customer_ticketing_system.start_sub_menu11234" name="Mandant" action="action_mandant_system"/>             
	</data>
</openerp>

